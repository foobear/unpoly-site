</FilesMatch>

# Exclude crawlers from hostnames like:
# - v1.unpoly.com
# - v2.unpoly.com
# - v2-pre.unpoly.com
RewriteCond %{HTTP_HOST} ^v2-pre\.unpoly\.com$
RewriteRule ^robots\.txt$ /robots.exclude.txt [L]
